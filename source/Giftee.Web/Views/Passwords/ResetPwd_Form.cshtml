@model Giftee.Web.Models.ForgotPassword
@{
  ViewBag.Title = "Reset Password";
}

<script type="text/javascript" 
        src="@Url.Content("~/Scripts/jquery.validate.min.js")">
        </script>
<script type="text/javascript"
        src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")">
        </script>

@using (Html.BeginForm("Create", "Passwords", new { httpMethod = "POST" }))
{
  <fieldset>
    <legend>
    Please enter the e-mail address with which you registered.
    </legend>
    <div class="editor-label">
      @Html.LabelFor(model => model.Email)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.Email)
      @Html.ValidationMessageFor(model => model.Email)
    </div>
    <p>
      <input type="submit" value="Change Password" />
    </p>
  </fieldset>
}
@Html.ValidationSummary(true)

